                                    <div class="icheck-primary" >
                                        @*@Html.CheckBoxFor()*@
                                        <label for="remember" >
                                            Lembrar me
                                        </label>
                                    </div>
                                </div>




                                <!-- /.col -->
                                <div class="col-4">
                                    <button type="submit" class="btn btn-primary btn-block">
                                        ENTRAR
                                    </button>
                                </div>
                                <!-- /.col -->
                            </div>








                            <div class="social-auth-links text-center mb-3">
                                <p>- OU -</p>
                                <a href="#" class="btn btn-block btn-primary">
                                    <img src="~/Content/Imagens/facebook_30px.png" />
                                    Entrar usando Facebook
                                </a>
                                <a href="#" class="btn btn-block btn-danger">
                                    <img src="~/Content/Imagens/google_30px.png" />
                                    Entrar usando Google+
                                </a>
                            </div>
                            <!-- /.social-auth-links -->

                            <p class="mb-1">
                                <a href="#">Esqueci minha senha</a>
                            </p>
                        </div>
                        <!-- /.login-card-body -->
                    </div>
                </div>
                <!-- /.login-box -->
                <!-- jQuery -->
                <script src="~/Content/Login/jquery.min.js"></script>
                <!-- Bootstrap 4 -->
                <script src="~/Content/Login/bootstrap.bundle.min.js"></script>
                <!-- AdminLTE App -->
                <script src="~/Content/Login/adminlte.min.js"></script>
        
