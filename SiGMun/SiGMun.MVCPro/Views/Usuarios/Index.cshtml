@model IEnumerable<SiGMun.MVCPro.Models.UsuarioModel>

@{
    ViewBag.Title = "Index";
}
    <section class="content active">
        <p>
            <button class="btn btn-success" id="@Url.Action("Adicionar")"> <i class="fa fa-2x fa-user-plus"></i> Adicionar</button>
        </p>
        <table>
            @foreach (var item in Model)
            {
                <div class="row">
                    <div class="col-lg-4 col-xs-6">
                        <!-- small box -->
                        <div class="small-box bg-aqua">
                            <div class="inner">
                                @{
                                    char[] delimitador = { ' ' };
                                    string[] pedacos = item.UsuNomeCompleto.Split(delimitador);
                                    int tamanho = pedacos.Length;
                                    int res = tamanho - 2;
                                }

                                <h3>@pedacos.First()  @pedacos[res] @pedacos.Last()</h3>
                                <p> <b>Email: </b>@item.UsuEmail</p>

                                <p>
                                    <b>Perfíl:</b> @item.UsuIdUsuario&nbsp; &nbsp; &nbsp;
                                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                    <b>Estado:</b>
                                    @if (item.UsuEstado == true)
                                    {<label>Activado</label>}
                                </p>
                                <p>
                                    <b>Data Cadastro:</b> @item.UsuDataCadastro.ToLongDateString()
                                </p>
                            </div>
                            <div class="icon">
                                <i class="ion-usb"></i>
                            </div>

                            <a href="#" class="small-box-footer">
                                <button class="btn btn-warning" type="button" value="@item.UsuId" onclick="location.href='@Url.Action("Alterar")'"><i class="fa fa-1x fa-edit"></i> Editar</button>|
                                <button class="btn btn-danger"><i class="fa fa-1x fa-trash"></i> Excluir</button>
                            </a>


                        </div>
                    </div>
                </div>
            }
        </table>
      
    </section>




